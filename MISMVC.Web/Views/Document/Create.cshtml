@model MISMVC.DAO.Model.Document

@{
	ViewBag.Title = "Create";
}

@section Scripts {
	@Scripts.Render( "~/bundles/jqueryval" )
}

<div class="row">
	<div class="">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">Create Document</h3>
			</div>
			<div class="panel-body">
				@using( Html.BeginForm( ) ) {
					@Html.AntiForgeryToken( )
						@Html.ValidationSummary( true , "" , new { @class = "text-danger" } )
					<fieldset>
						<div class="form-group">
								@Html.EditorFor( model => model.FileOriginName , new { htmlAttributes = new { @class = "form-control",@placeholder="File Origin Name" } } )
								@Html.ValidationMessageFor( model => model.FileOriginName , "" , new { @class = "text-danger" } )
						</div>

						<div class="form-group">
								@Html.EditorFor( model => model.FileGUIDName , new { htmlAttributes = new { @class = "form-control", @placeholder="File GUID Name" } } )
								@Html.ValidationMessageFor( model => model.FileGUIDName , "" , new { @class = "text-danger" } )
						</div>

						<div class="form-group">
								@Html.EditorFor( model => model.FileSavePath , new { htmlAttributes = new { @class = "form-control",@placeholder="File Save Path" } } )
								@Html.ValidationMessageFor( model => model.FileSavePath , "" , new { @class = "text-danger" } )
						</div>

						<div class="form-group">
								@Html.EditorFor( model => model.Description , new { htmlAttributes = new { @class = "form-control" ,@placeholder="Description"} } )
								@Html.ValidationMessageFor( model => model.Description , "" , new { @class = "text-danger" } )
						</div>

						<div class="form-group">
							<div class="col-md-2">
								@Html.ActionLink( "Back" , "Index","",new { @class="btn btn-default"} )
							</div>
							<div class="col-md-2">
								<input type="submit" value="Create" class="btn btn-default" />
							</div>
						</div>
					</fieldset>
				}
				</div>
			</div>
		</div>
	</div>
